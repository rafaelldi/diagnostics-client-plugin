<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin url="https://github.com/rafaelldi/diagnostics-client-plugin">
    <id>com.github.rafaelldi.diagnosticsclientplugin</id>
    <name>Diagnostics Client</name>
    <vendor url="https://github.com/rafaelldi">Rival Abdrakhmanov</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.rider</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Diagnostics Client" anchor="bottom" icon="DiagnosticsClientIcons.ToolWindow"
                    canCloseContents="true"
                    factoryClass="com.github.rafaelldi.diagnosticsclientplugin.toolWindow.DiagnosticsToolWindowFactory"/>

        <notificationGroup id="Diagnostics Client" displayType="BALLOON"/>
    </extensions>

    <actions>
        <group id="DiagnosticsClient.ToolWindow.Explorer">
            <action id="DiagnosticsClient.ToolWindow.Explorer.RefreshList"
                    class="com.github.rafaelldi.diagnosticsclientplugin.actions.RefreshListAction"
                    text="Refresh"
                    description="Refresh process list"
                    icon="AllIcons.Actions.Refresh">
            </action>
            <separator/>
            <group id="DiagnosticsClient.ToolWindow.Explorer.Counters"
                   icon="DiagnosticsClientIcons.Counters"
                   text="Counters"
                   popup="true">
                <action id="DiagnosticsClient.ToolWindow.Explorer.StartCountersMonitoring"
                        class="com.github.rafaelldi.diagnosticsclientplugin.actions.StartMonitoringCountersAction"
                        text="Start Counters Monitoring"
                        description="Monitor counters"
                        icon="AllIcons.Actions.Show">
                </action>
                <action id="DiagnosticsClient.ToolWindow.Explorer.StopCountersMonitoring"
                        class="com.github.rafaelldi.diagnosticsclientplugin.actions.StopMonitoringCountersAction"
                        text="Stop Counters Monitoring"
                        description="Stop counters monitoring"
                        icon="AllIcons.Actions.Suspend">
                </action>
                <action id="DiagnosticsClient.ToolWindow.Explorer.StartCountersCollection"
                        class="com.github.rafaelldi.diagnosticsclientplugin.actions.StartCollectingCountersAction"
                        text="Start Counters Collection"
                        description="Collect counters and export them to a file"
                        icon="AllIcons.Actions.MenuSaveall">
                </action>
                <action id="DiagnosticsClient.ToolWindow.Explorer.StopCountersCollection"
                        class="com.github.rafaelldi.diagnosticsclientplugin.actions.StopCollectingCountersAction"
                        text="Stop Counters Collection"
                        description="Stop counters collection"
                        icon="AllIcons.Actions.Suspend">
                </action>
            </group>
            <action id="DiagnosticsClient.ToolWindow.Explorer.CollectDump"
                    class="com.github.rafaelldi.diagnosticsclientplugin.actions.CollectDumpAction"
                    text="Memory Dump"
                    description="Collect memory dump"
                    icon="AllIcons.Actions.Dump">
            </action>
        </group>
        <group id="DiagnosticsClient.ToolWindow.CountersSession">
            <action id="DiagnosticsClient.ToolWindow.CountersSession.Start"
                    class="com.github.rafaelldi.diagnosticsclientplugin.actions.StartCounterSessionAction"
                    text="Start Counters Session"
                    description="Start counters monitoring session"
                    icon="AllIcons.Actions.Execute">
            </action>
            <action id="DiagnosticsClient.ToolWindow.CountersSession.StartWithTimer"
                    class="com.github.rafaelldi.diagnosticsclientplugin.actions.StartCounterSessionWithTimerAction"
                    text="Start Counters Session With Timer"
                    description="Start counters monitoring session with timer"
                    icon="AllIcons.Actions.Profile">
            </action>
            <action id="DiagnosticsClient.ToolWindow.CountersSession.Stop"
                    class="com.github.rafaelldi.diagnosticsclientplugin.actions.StopCounterSessionAction"
                    text="Stop Counters Session"
                    description="Stop counters monitoring session"
                    icon="AllIcons.Actions.Suspend">
            </action>
        </group>
    </actions>
</idea-plugin>
